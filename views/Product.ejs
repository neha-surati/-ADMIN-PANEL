<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Product</title>
    <!-- Tailwind CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #fce4ec;
      }
    </style>
  </head>
  <body class="flex justify-center items-center h-screen">

    

    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-lg">
      <h1 class="text-2xl font-bold mb-6 text-center">Add Product</h1>
      <form action="/product/addProduct" method="post">
        <div class="mb-4">
          <label for="image" class="block text-gray-700 font-bold mb-2">
            Product Image
          </label>
          <input
            type="text"
            name="image"
            id="image"
            placeholder="Enter image URL"
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          />
        </div>
        <div class="mb-4">
          <label for="productname" class="block text-gray-700 font-bold mb-2">
            Product Name
          </label>
          <input
            type="text"
            name="productname"
            id="productname"
            placeholder="Enter product name"
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          />
        </div>
        <div class="mb-4">
          <label for="productprice" class="block text-gray-700 font-bold mb-2">
            Product Price
          </label>
          <input
            type="number"
            name="productprice"
            id="productprice"
            placeholder="Enter product price"
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          />
        </div>
        <div class="mb-4">
          <label for="description" class="block text-gray-700 font-bold mb-2">
            Product Description
          </label>
          <input
            type="text"
            name="description"
            id="description"
            placeholder="Enter description"
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          />
        </div>
        <div class="mb-4" id="category">
          <label for="category" class="block text-gray-700 font-bold mb-2">
            Product Category
          </label>
          <select
            name="CategoryId"
            id="category"
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          >
            <option value="" selected disabled>--Select Category--</option>
            <% cat.forEach(val => { %>
              <option value="<%= val._id %>"><%= val.cat_name %></option>
            <% }) %>
          </select>
        </div>
        <div class="mb-4">
          <label for="subcategory" class="block text-gray-700 font-bold mb-2">
            Product SubCategory
          </label>
          <select
            name="subCategoryId"
            id="subcategory"
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          >
            <option value="" selected disabled>--Select SubCategory--</option>
            <% subcat.forEach(val => { %>
              <option value="<%= val._id %>"><%= val.subcat_name %></option>
            <% }) %>
          </select>
        </div>
        <div class="mb-4">
          <label for="extracategory" class="block text-gray-700 font-bold mb-2">
            Product ExtraCategory
          </label>
          <select
            name="extraCategoryId"
            id="extracategory"
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          >
            <option value="" selected disabled>--Select ExtraCategory--</option>
            <% extracat.forEach(val => { %>
              <option value="<%= val._id %>"><%= val.extracat_name %></option>
            <% }) %>
          </select>
        </div>
        <div class="flex items-center justify-between">
          <input
            type="submit"
            value="Submit"
            class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
          />
        </div>
      </form>
    </div>

  </body>
</html>
